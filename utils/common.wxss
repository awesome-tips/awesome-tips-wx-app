.page-head {
  padding: 25rpx;
  text-align: center;
}

.page-body {
  padding: 25rpx;
}

.page-top-button {
  width: 304rpx;
  height: 84rpx;
  margin: 22rpx auto;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #616161;
  background: #fffefc;
  border: 1rpx solid rgba(13,25,40,0.25);
  box-shadow: 0 8rpx 20rpx 0 rgba(44,57,75,0.1);
}

.page-top-button-hover {
  transform: scale(.95);
  transition: all 200ms;
  box-shadow: 0 2rpx 6rpx 0 rgba(44,57,75,0.15);
}

.feed-list {
  display: block;
}

.feed-list-item {
  margin: 25rpx 0;
  background-color: #fffefc;
  border-radius: 6rpx;
  overflow: hidden;
  border: 1rpx solid rgba(13,25,40,0.25);
  box-shadow: 0 8rpx 20rpx 0 rgba(44,57,75,0.1);
}
.feed-list-item:first-child {
  margin-top: 0;
}
.feed-list-item:last-child {
  margin-bottom: 0;
}
.feed-list-item.item-hover {
    box-shadow: 0 2rpx 6rpx 0 rgba(44,57,75,0.15);
    transform: scale(.95);
    transition: all 200ms;
}

.feed-list-item-title-area {
  padding: 45rpx 30rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
}

.feed-list-item-date-author-area {
  padding: 10rpx 30rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
  background-color: #f9f9f9;
}

.feed-list-item-title-text {
  flex: 1;
  color: #515151;
  font-size: 32rpx;
}
.feed-list-item-sm-text {
  flex: 1;
  color: #bfbfbf;
  font-size: 22rpx;
}

.bottom-loading-container {
  text-align: center;
  padding-top: 30rpx;
}

.bottom-loading-image {
  width: 60rpx;
  height: 60rpx;
}

.ad-view-item {
  margin: 25rpx 0;
  border-radius: 6rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx 0 rgba(44,57,75,0.1);
}
.ad-view-item:first-child {
  margin-top: 0;
}
.ad-view-item:last-child {
  margin-bottom: 0;
}