@import "./DINPro.wxss";

.home {
  overflow-x: hidden;
}

.home .head {
  margin: 22rpx 40rpx;
}

.home .box-name {
  margin: 0 30rpx;
  font-weight: 600;
  font-size: 32rpx;
  z-index: 100;
  position: relative;
  color: #616161;
}

.home .box-number {
  font-size: 100rpx;
  position: absolute;
  font-family: DINPro;
  line-height: 100rpx;
  right: 30rpx;
  bottom: -35rpx;
  z-index: 1;
  color: #efefef;
}

.home .box-bg-shadow {
  border-radius: 6rpx;
  background: #fffefc;
  border: 1rpx solid rgba(13,25,40,0.25); /* 1rpx border 会让整个 View 左右共增加 4rpx (2px) 宽度 */
  box-shadow: 0 8rpx 20rpx 0 rgba(44,57,75,0.1);
}

.home .box-bg-shadow-hover {
  transform: scale(.95);
  transition: all 200ms;
  box-shadow: 0 2rpx 6rpx 0 rgba(44,57,75,0.15);
}

