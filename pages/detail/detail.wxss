@import '/towxml/style/main.wxss';
@import '/towxml/style/theme/light.wxss';

.h2w__title {
  margin:0 30rpx;
  padding-top:30rpx;
}

.h2w__main {
  margin:0 30rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;
}

.content-view {
  background-color: transparent;
}

.feed-title {
  font-weight:bold;
  border-bottom-style:solid;
  border-bottom-width:2rpx;
  font-size:42rpx;
  padding-bottom:10rpx;
  border-color:#EEEEEE;
}

.feed-date-auther {
  padding-top:10rpx;
  padding-bottom:10rpx;
  font-size:30rpx;
  color: #AFAFAF;
}

.ad-view {
  margin:0 15px;
  padding-top:15px;
  padding-bottom:75px;
  display:flex;
  justify-content:center;
}
.ad-view-IPX {
  padding-bottom: 109px;
}

.bottom-view {
  width: 100%;
  height: 60px;
  bottom: 0;
  position: fixed;
  background-color: #F8F8F8;
  box-shadow: 0 0 5px 0 rgba(171,180,191,0.39);
}

.bottom-view .container {
  width: 100%;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-view .container .button {
  width: 50%;
  height: 45px;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 22.5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-view .container .button-hover {
  transform: scale(.95);
  transition: all 200ms;
  box-shadow: 0 2rpx 6rpx 0 rgba(44,57,75,0.15);
}

.bottom-view .container .subscribe {
  width: 60%;
  float: left;
  color: #FFFFFF;
  background: #4D7FFF;
  border: 1rpx solid rgba(22, 79, 235, 0.50);
  box-shadow: 0 8rpx 20rpx 0 rgba(24, 108, 224, 0.25);
  margin: 0 10px;
}

.bottom-view .container .favorites {
  width: 40%;
  float: right;
  color: #616161;
  background: #FFFEFC;
  border: 1rpx solid rgba(13,25,40,0.25);
  box-shadow: 0 8rpx 20rpx 0 rgba(44,57,75,0.1);
  margin-right: 10px;
}

.bottom-view .container .disabled {
  color: lightgray;
  border: 1rpx solid lightgray;
  background: #FFFEFC;
}

.gohome-button {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  right: 15px;
  bottom: 75px;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background-color: #FFFFFF;
  box-shadow: 0 0 40rpx rgba(0,0,0,0.2);
}

.gohome-button-hover {
  transform: scale(.90);
  transition: all 200ms;
}

.gohome-button image {
  width: 25px;
  height: 22px;
}